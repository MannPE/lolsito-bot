{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2018",
    "baseUrl": ".",
    "paths": {
      "*": ["src/node_modules/*", "src/types/*"]
    },
    "typeRoots": ["src/node_modules/@types", "src/types"],
    "outDir": "./build"
  },
  "include": ["./src/**/*"],
  "exclude": ["src/node_modules"]
}
